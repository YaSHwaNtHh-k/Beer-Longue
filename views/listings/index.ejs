<%- layout("/layouts/boilerplate.ejs") %>
<div class="container-images">
    <% for (let listing of allListings){ %>
          <div id="card">
            <a href="./listings/<%= listing._id %>"><img class="card-img" src="<%= listing.image %>" class="card-img-top" alt="image"></a>
            <div class="card-body">
              <a href="./listings/<%= listing._id %>" class="card-text">Title : <%= listing.title %></a>
              <br>
              <a href="./listings/<%= listing._id %>" class="card-text">Price : &#8377 <%= listing.price %></a>
              <br>
              <button class="seemore"><a href="./listings/<%= listing._id %>">See more</a></button>
            </div>
          </div>
    <% } %>
</div>