<%- layout("layouts/boilerplate.ejs") %>
<% for(cart of allcart){ %>
    <% if(currUser && currUser._id.equals(cart.author._id)){ %>
        <div class="cart">
            <img src="<%= cart.image %>">
            <div class="cart-info">
                <h4><%= cart.title %></h4>
                <p><%= cart.date %></p>
            </div>
            <form action="listings/<%= cart.productid %>" method="get">
                <button class="buynow">Buy</button>
            </form>
            <form action="/cart/<%=cart._id%>?_method=DELETE" method="post">
                <button class="delete"><i class="fa-solid fa-trash"></i></button>
            </form>
        </div>   
    <% } %>
<% } %>
